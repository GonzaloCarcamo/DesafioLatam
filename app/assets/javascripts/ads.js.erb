
$(document).on('turbolinks:load', function() {

    $('[name=q]').on('keyup', function(e){
      e.preventDefault()

      if($(this).val().length > 2 ){

        $.ajax({
          type: "get",
          url: "/ads",
          data: { q: $(this).val() },
          dataType: "script" })

      if($(this).val().length == 0){
        $.ajax({
          type: "get",
          url: "/ads",
          dataType: "script" }); }
    }


})


  })
