
$(document).on('turbolinks:load', function() {


    // Search comment
    $('[name=q]').on('keyup', function(e){
      e.preventDefault()

      if($(this).val().length > 2 ){

        $.ajax({
          type: "get",
          url: "/ads",
          data: { q: $(this).val() },
          dataType: "script"
        });
        $('html, body').animate({
       scrollTop: $("#ads").offset().top
   }, 200);
      }


      if($(this).val().length == 0){
        $.ajax({
          type: "get",
          url: "/ads",
          dataType: "script"
        });
      }
    })



  })
