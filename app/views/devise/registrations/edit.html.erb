<div class="container">


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>



  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <br>

  <div class="form-group">
    <%= f.label :"Cuéntanos de tí" %><br />
    <%= f.text_field :resume, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :"Cuánto cuesta tu clase?" %><br />
    <%= f.text_field :fee, class:'form-control' %>
  </div>

  <div class="field">
    <%= f.label :"Actual contraseña" %> <br>
    <%= f.password_field :current_password, class:'form-control' %>
  </div>

  <br>

  <div class="actions form-group">
    <%= f.submit "Actualizar", class:'form-control btn btn-primary' %>

  </div>
<% end %>
