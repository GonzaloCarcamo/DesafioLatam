

<p id="notice"><%= notice %></p>

<h1 class="text-center"><strong>Perfil</strong></h1>

  <div class="container">
       <div class="row no-gutters border rounded overflow-hidden mb-4 shadow-sm h-md-250 position-relative">
         <div class="col p-4 position-static">



           <p class="">Profe: <strong> <%= %> </strong><p>
           <div class="mb-1 text-muted"><strong>"<%=@ad.title%>"</strong></div><br>
           <strong class="d-inline-block mb-2 text-dark">
             <% @ad.tags.each do |tag| %>
                [<%= tag.title%>]
                <% end %></strong>

                <div class="my-5">
                <% if @ad.instruction.attached? %>
                <i class="fas fa-file-pdf fa-2x"></i>
                <a href="<%= rails_blob_path(@ad.instruction, disposition: 'attachment')%>">Descargar PDF</a>
                <% end %> |

                <i class="fab fa-youtube fa-2x"><%= @ad.link1 %></i>
                <a href="">Mi Canal youtube</a>

                </div>





         </div>
         <div class="col-auto d-none d-lg-block">
           <% if @ad.image.attached? %>
           <p>
           <%= image_tag @ad.image, style: "height:280px; width:280px;"%>
           </p>

           <% end %>
         </div>
       </div>
     </div>

     <div class="text-right"><strong>

     <%= link_to 'Edit', edit_ad_path(@ad)%> |
     <%= link_to 'Back', ads_path %>

     </strong></div>

     
