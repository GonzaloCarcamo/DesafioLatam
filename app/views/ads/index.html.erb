  <% @ads.each do |ad| %>

  

  <main role="main" class="container">

    <div class="jumbotron">
      <h2><% ad.tags.each do |tag| %>
          [<%= tag.title %>]
          <% end %></h2>
      
      <h3 class="card-subtitle mb-2 text-muted"><%= ad.category %></h3>
    
      <h5 class="card-text"><%= ad.title %>.</h5>
     
      <button type="button" class="btn btn-light">
      <%= link_to 'Show', ad %>
      </button>

      <% if can? :edit, ad %>  
      <button type="button" class="btn btn-light">
      <%= link_to 'Edit', edit_ad_path(ad) %>
      </button>
      <% end %>
      
      <% if can? :destroy, ad %>
      <button type="button" class="btn btn-light">
      <%= link_to 'Eliminar', ad, method: :delete, data: { confirm: 'Are you sure?' } %>
      </button>
      <% end %> 


    </main>

    <% end %>



