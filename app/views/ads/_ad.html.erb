<!--Ads-->

<main role="main" style="opacity: 0.8" id="ad_<%= ad.id %>">
  <div class="jumbotron">
    <h3>
      <strong>
      <% ad.tags.each do |tag| %>
        <% if ad.tags.any?%>
          [<%= tag.title %>]
        <% else %>
          <p>Áún no ha ingresado sus tags</p>
        <% end %>
      <% end %>
    </strong>
  </h3>

    <p><strong><%= ad.category %></strong></p>

    <h4>"<%=ad.title %>"</h4>

    <div id="options" class="text-right">

    <button type="button" class="btn btn-outline-primary">
      <%= link_to 'detalle', ad %>
    </button>

    <% if can? :edit, ad %>
    <button type="button" class="btn btn-outline-primary">
      <%= link_to 'editar', edit_ad_path(ad) %>
    </button>
    <% end %>

    <% if can? :destroy, ad %>
    <button type="button" class="btn btn-outline-primary">
      <%= link_to 'eliminar', ad, method: :delete, data: { confirm: 'Confirma la eliminación del anuncio?' } %>
    </button>
    <% end %>

    </div>

  </div>
</main>
